{
  "compilerOptions": {
    "strict": false,  // 완전 풀어버리기
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node16",  // node16으로 변경
    "module": "Node16",  // module을 Node16으로 설정
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@lib/*": ["./src/lib/*"],
      "@pages/*": ["./src/pages/*"],
      "@router/*": ["./src/router/*"],
      "@services/*": ["./src/services/*"],
      "@stores/*": ["./src/stores/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "exclude": [
    "node_modules",
    "tailwind.config.js"  // 이 파일을 컴파일에서 제외
  ]
}
