{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "moduleResolution": "node16",  // Keeps node-style module resolution
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "module": "Node16",  // Change to "Node16" for compatibility with "moduleResolution"
    "target": "ES2020",
    "baseUrl": ".", // Base directory for paths
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@lib/*": ["./src/lib/*"],
      "@pages/*": ["./src/pages/*"],
      "@router/*": ["./src/router/*"],
      "@services/*": ["./src/services/*"],
      "@stores/*": ["./src/stores/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src"]
  }
}
